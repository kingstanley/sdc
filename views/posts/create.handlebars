<div class="row white">
    <div class="col s12 m8">
        <form action="/create" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="input-field">
                    <input type="text" name="title" id="title" required title="Your post Title" value="{{title}}">
                    <label for="title">Title</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    {{!-- <select multiple name="hashtags">
                        <option value="" selected disabled>Choose your option</option>
                        <option value="Business">Business</option>
                        <option value="Relationship">Relationship</option>
                        <option value="News">News</option>
                    </select> --}}
                    <input type="text" name="hashtags" id="hashtags" placeholder="Enter tags seperated by commas(,) eg: Politices, Presidential Election">
                    <label>Tags</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <h5>Body</h5>
                    <textarea type="text" name="body" id="body" required title="Your post body">{{body}}</textarea>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <div class="input-field ">
                        <select name="status" class="status" id="status" value="{{status}}">
                            <option value="Draft" selected>Draft</option>
                            <option value="Published">Published</option>
                            <option value="unpublished">Unpublished</option>
                        </select>
                        <label for="status">Status</label>
                    </div>
                </div>
            </div>
            <div class="row">
        <p>
            
            <label for="allowComments">
                <input type="checkbox" name="allowComments" id="allowComments" class="filled-in" checked>
               <span>
                   Allow Comments
                </span>
                </label>
        </p>
    </div>
            <div class="row">
                <div class="input-field">
                    <h5>Profile Picture</h5>
                    <input type="file" name="image" id="image" value="{{image}}">
                </div>
            </div>

            <div class="row card-action">
                <input type="submit" value="Save" class="btn">
            </div>
        </form>
    </div>

